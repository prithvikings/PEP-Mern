<!DOCTYPE html>
<html>
  <head>
    <title>All Complaints - ResolveIT</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap"
      rel="stylesheet"
    />

    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <style>
      body {
        font-family: "Poppins", "Lato", sans-serif;
      }
    </style>
  </head>

  <body>
    <main class="min-h-screen bg-gray-100">
      <nav class="max-w-6xl mx-auto p-4 flex items-center justify-between">
        <h1 class="text-xl font-medium text-zinc-900">ResolveIT</h1>

        <a
          href="/"
          class="text-sm text-zinc-700 hover:text-zinc-500 transition-colors"
        >
          â¬… Back
        </a>
      </nav>
      <header class="max-w-6xl mx-auto p-4 mt-6">
        <h1 class="text-4xl font-medium text-zinc-900">Complaint List</h1>
        <p class="text-sm text-zinc-600 mt-2">
          All complaints submitted so far are shown below.
        </p>
      </header>

      <section class="max-w-6xl mx-auto p-4 mt-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-10">

          <div
            class="p-6 rounded-2xl shadow-md border border-yellow-200 bg-gradient-to-br from-yellow-50 to-white hover:shadow-lg transition-all"
          >
            <div class="flex items-center justify-between">
              <h2
                class="text-sm font-semibold text-yellow-700 uppercase tracking-wide"
              >
                Open Complaints
              </h2>

              <span
                class="px-3 py-1 text-xs font-bold rounded-full bg-yellow-200 text-yellow-800"
              >
                ACTIVE
              </span>
            </div>

            <p
              id="openCount"
              class="text-5xl font-bold text-yellow-800 mt-4"
            >
              0
            </p>

            <p class="text-sm text-zinc-500 mt-2">
              Complaints still waiting for resolution
            </p>
          </div>

          <div
            class="p-6 rounded-2xl shadow-md border border-green-200 bg-gradient-to-br from-green-50 to-white hover:shadow-lg transition-all"
          >
            <div class="flex items-center justify-between">
              <h2
                class="text-sm font-semibold text-green-700 uppercase tracking-wide"
              >
                Resolved Complaints
              </h2>

              <span
                class="px-3 py-1 text-xs font-bold rounded-full bg-green-200 text-green-800"
              >
                CLOSED
              </span>
            </div>

            <p
              id="closedCount"
              class="text-5xl font-bold text-green-800 mt-4"
            >
              0
            </p>

            <p class="text-sm text-zinc-500 mt-2">
              Complaints successfully completed
            </p>
          </div>
        </div>

        <div
          id="complaints"
          class="grid grid-cols-1 md:grid-cols-2 gap-4"
        ></div>
      </section>
    </main>

    <script>
      async function loadComplaints() {
        const res = await fetch("/api/complaints");
        const complaints = await res.json();

        const container = document.getElementById("complaints");
        container.innerHTML = "";

        const openComplaints = complaints.filter(
  (c) => c.status === "pending"
).length;


        const closedComplaints = complaints.filter(
          (c) => c.status === "resolved"
        ).length;

        document.getElementById("openCount").textContent = openComplaints;
        document.getElementById("closedCount").textContent = closedComplaints;

        if (complaints.length === 0) {
          container.innerHTML = `
            <p class="text-zinc-600 text-sm">
              No complaints submitted yet.
            </p>
          `;
          return;
        }

        complaints.forEach((c) => {
          let badgeColor = "";

          if (c.status === "open")
            badgeColor = "bg-yellow-200 text-yellow-800";

          if (c.status === "resolved")
            badgeColor = "bg-green-200 text-green-800";

          container.innerHTML += `
            <div class="p-4 bg-white rounded-xl border border-zinc-200 shadow-sm hover:shadow-md transition-all">

              <div class="flex items-start justify-between gap-2">
                <h3 class="text-lg font-medium text-zinc-900">
                  ${c.title}
                </h3>

                <span class="text-xs font-semibold px-2 py-1 rounded-full ${badgeColor}">
                  ${c.status.toUpperCase()}
                </span>
              </div>

              <p class="text-sm text-zinc-600 mt-2">
                ${c.description}
              </p>

            </div>
          `;
        });
      }

      loadComplaints();
    </script>
  </body>
</html>
