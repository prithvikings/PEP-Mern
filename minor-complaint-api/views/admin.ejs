<!DOCTYPE html>
<html>
  <head>
    <title>Admin Dashboard - ResolveIT</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body>
    <main class="min-h-screen bg-gray-100">
      <nav class="max-w-6xl mx-auto p-4 flex items-center justify-between">
        <h1 class="text-xl font-medium text-zinc-900">ResolveIT</h1>

        <a
          href="/"
          class="text-sm text-zinc-700 hover:text-zinc-500 transition-colors"
        >
          â¬… Back to User Page
        </a>
      </nav>

      <header class="max-w-6xl mx-auto p-4 mt-6">
        <h2 class="text-4xl font-medium text-zinc-900">Admin Dashboard</h2>
        <p class="text-sm text-zinc-600 mt-2">
          Manage and resolve complaints submitted by users.
        </p>
      </header>

      <!-- Complaints Section -->
      <section class="max-w-6xl mx-auto p-4 mt-6">
        <div
          id="complaints"
          class="grid grid-cols-1 md:grid-cols-2 gap-4"
        ></div>
      </section>
    </main>

    <script>
      async function loadComplaints() {
        const res = await fetch("/api/complaints");
        const complaints = await res.json();

        const container = document.getElementById("complaints");
        container.innerHTML = "";

        if (complaints.length === 0) {
          container.innerHTML = `
            <p class="text-zinc-600 text-sm">
              No complaints submitted yet.
            </p>
          `;
          return;
        }

        complaints.forEach((c) => {
          let badgeColor = "";

          if (c.status === "pending")
            badgeColor = "bg-yellow-200 text-yellow-800";

          if (c.status === "in-progress")
            badgeColor = "bg-blue-200 text-blue-800";

          if (c.status === "resolved")
            badgeColor = "bg-green-200 text-green-800";

          container.innerHTML += `
            <div class="p-4 bg-white rounded-xl border border-zinc-200 shadow-sm hover:shadow-md transition-all">

              <!-- Title + Status -->
              <div class="flex items-start justify-between gap-2">
                <h3 class="text-lg font-medium text-zinc-900">
                  ${c.title}
                </h3>

                <span class="text-xs font-semibold px-2 py-1 rounded-full ${badgeColor}">
                  ${c.status.toUpperCase()}
                </span>
              </div>

              <!-- Description -->
              <p class="text-sm text-zinc-600 mt-2">
                ${c.description}
              </p>

              <!-- Actions -->
              <div class="flex gap-2 mt-4">
                <button
                  onclick="resolve(${c.id})"
                  class="px-3 py-1.5 text-sm rounded-lg bg-zinc-800 text-white hover:bg-zinc-700 transition-colors cursor-pointer"
                >
                  Resolve
                </button>

                <button
                  onclick="removeComplaint(${c.id})"
                  class="px-3 py-1.5 text-sm rounded-lg bg-red-600 text-white hover:bg-red-500 transition-colors cursor-pointer"
                >
                  Delete
                </button>
              </div>
            </div>
          `;
        });
      }

      async function resolve(id) {
        await fetch(`/api/complaints/${id}/resolve`, {
          method: "PUT",
        });

        loadComplaints();
      }

      async function removeComplaint(id) {
        await fetch(`/api/complaints/${id}`, {
          method: "DELETE",
        });

        loadComplaints();
      }

      loadComplaints();
    </script>
  </body>
</html>
